<div class="container">
  
<h3>以下の内容で、問い合わせる。</h3>

<%=form_for(@contact)do|f|%>
  
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  
  <p>お名前:         <%= @contact.name %></p>
  <p>メールアドレス: <%= @contact.email %></p>
  <p>詳細:           <%= @contact.content %></p>
  <br>
  
  <%=f.submit '送信',class:'btn btn-primary btn-block'%>
<% end %>

<%=form_for(@contact,url: new_contact_path,method:'get')do |f| %>
  
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>

  <%=f.submit "戻る", name: 'back',class:'btn btn-primary btn-block' %>
<% end %>
</div>